<resources>
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_46</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>


    <!--空心按钮-->
    <style name="common_hollow_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">@dimen/dp_14</item>
        <item name="android:paddingLeft">@dimen/dp_14</item>
        <item name="android:paddingTop">@dimen/dp_6</item>
        <item name="android:paddingBottom">@dimen/dp_6</item>
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:background">@drawable/btn_common_hollow_selector</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:clickable">true</item>
    </style>

    <!--实心按钮-->
    <style name="common_solid_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">@dimen/dp_14</item>
        <item name="android:paddingLeft">@dimen/dp_14</item>
        <item name="android:paddingTop">@dimen/dp_6</item>
        <item name="android:paddingBottom">@dimen/dp_6</item>
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:background">@drawable/btn_common_solid_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
    </style>
</resources>