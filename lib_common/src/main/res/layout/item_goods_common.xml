<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_background_selector"
    android:paddingBottom="@dimen/dp_8"
    android:layout_margin="@dimen/dp_4"
    android:orientation="vertical">

    <com.rishabhharit.roundedimageview.RoundedImageView
        android:id="@+id/ivIcon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:cornerRadius="@dimen/dp_8"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCorners="topLeft|topRight" />

    <TextView
        android:id="@+id/tvGoodsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dp_2"
        android:maxLines="2"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/grey_text"
        android:textSize="@dimen/sp_13"
        app:layout_constraintTop_toBottomOf="@+id/ivIcon" />

    <TextView
        android:id="@+id/tvGoodsPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="110"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/sp_12"
        android:paddingLeft="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGoodsName" />
    <TextView
        android:id="@+id/tvShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="@dimen/dp_10"
        android:text="莎啦啦瓜批专营店  上海"
        android:textColor="@color/grey_light"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/small_next"
        android:drawablePadding="@dimen/dp_6"
        android:textSize="@dimen/sp_11"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGoodsPrice"/>

</androidx.constraintlayout.widget.ConstraintLayout>