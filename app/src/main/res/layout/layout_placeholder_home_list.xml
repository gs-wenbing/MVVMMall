<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/ll_placeholder">
    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_10"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="@dimen/dp_4"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivIcon1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:background="#EDEDED"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tvGoodsName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EDEDED"
                android:paddingLeft="10dp"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ivIcon1"
                />
            <TextView
                android:id="@+id/tvGoodsPrice1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#EDEDED"
                android:layout_marginTop="8dp"
                android:paddingLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvGoodsName1"
                />
            <TextView
                android:id="@+id/goodsSimilarBtn1"
                android:layout_width="38dp"
                android:layout_height="18dp"
                android:background="#EDEDED"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@id/tvGoodsPrice1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvGoodsPrice1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="@dimen/dp_4"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:background="#EDEDED"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tvGoodsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EDEDED"
                android:paddingLeft="10dp"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ivIcon"
                />
            <TextView
                android:id="@+id/tvGoodsPrice"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#EDEDED"
                android:layout_marginTop="8dp"
                android:paddingLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvGoodsName"
                />
            <TextView
                android:id="@+id/goodsSimilarBtn"
                android:layout_width="38dp"
                android:layout_height="18dp"
                android:background="#EDEDED"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@id/tvGoodsPrice"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvGoodsPrice" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/l1"
        android:padding="@dimen/dp_10"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="@dimen/dp_4"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivIcon3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:background="#EDEDED"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tvGoodsName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EDEDED"
                android:paddingLeft="10dp"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ivIcon3"
                />
            <TextView
                android:id="@+id/tvGoodsPrice3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#EDEDED"
                android:layout_marginTop="8dp"
                android:paddingLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvGoodsName3"
                />
            <TextView
                android:id="@+id/goodsSimilarBtn3"
                android:layout_width="38dp"
                android:layout_height="18dp"
                android:background="#EDEDED"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@id/tvGoodsPrice3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvGoodsPrice3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="@dimen/dp_4"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivIcon4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:background="#EDEDED"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tvGoodsName4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EDEDED"
                android:paddingLeft="10dp"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ivIcon4"
                />
            <TextView
                android:id="@+id/tvGoodsPrice4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#EDEDED"
                android:layout_marginTop="8dp"
                android:paddingLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvGoodsName4"
                />
            <TextView
                android:id="@+id/goodsSimilarBtn4"
                android:layout_width="38dp"
                android:layout_height="18dp"
                android:background="#EDEDED"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@id/tvGoodsPrice4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvGoodsPrice4" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <ProgressBar
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:layout_width="@dimen/dp_30"
        android:layout_height="wrap_content" />
</RelativeLayout>