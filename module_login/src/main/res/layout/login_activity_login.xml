<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <ImageView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="80dp"
            android:background="@mipmap/ic_launcher"
            android:keepScreenOn="true"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="50dp">

            <EditText
                android:id="@+id/editUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/login_selector"
                android:hint="请输入您的账户"
                android:paddingEnd="0dp"
                android:paddingLeft="42dp"
                android:paddingRight="0dp"
                android:paddingStart="42dp"
                android:singleLine="true"
                android:textColor="#2f2f2f"
                android:textColorHint="#a6a6a6"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/ivUser"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignLeft="@id/editUsername"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/dp_14"
                android:background="@mipmap/username"
                android:keepScreenOn="true"
                android:scaleType="fitCenter"
                android:visibility="visible"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="48dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/login_selector"
                android:hint="请填写密码"
                android:paddingEnd="0dp"
                android:paddingLeft="42dp"
                android:paddingRight="0dp"
                android:paddingStart="42dp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#2f2f2f"
                android:textColorHint="#a6a6a6"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/ivPassword"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignLeft="@id/editPassword"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/dp_14"
                android:background="@mipmap/password"
                android:keepScreenOn="true"
                android:scaleType="fitCenter"
                android:visibility="visible"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/btn_common_solid_selector"
            android:padding="7dp"
            android:paddingTop="7dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_20"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/login_line_focuse_shape"
                android:text="注册"/>
            <TextView
                android:id="@+id/btnForget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/login_line_focuse_shape"
                android:text="忘记密码"/>
        </RelativeLayout>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/frameContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>
